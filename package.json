{
  "name": "pyrodux",
  "version": "0.0.1-beta.1",
  "description": "Redux actions and selectors to bind Firebase's Firestore collections and queries to your state",
  "main": "build/index.js",
  "scripts": {
    "build": "babel src --presets=es2015,stage-1 --out-dir build",
    "watch": "babel src --watch --presets=es2015,stage-1 --out-dir build",
    "release": "npm publish build",
    "prepublishOnly": "npm run build",
    "dev-init": "npm install && npm run playground:install && npm run playground:installsymlink",
    "playground:install": "npm --prefix ./test-playground install",
    "playground:installsymlink": "npm --prefix ./test-playground install ./",
    "playground:start": "npm --prefix ./test-playground start",
    "dev-playground": "concurrently \"npm:watch\" \"npm:playground:start\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sydeslyde/pyrodux.git"
  },
  "author": "sydeslyde",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sydeslyde/pyrodux/issues"
  },
  "homepage": "https://github.com/sydeslyde/pyrodux#readme",
  "dependencies": {
    "firebase": "^5.2.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-form": "^7.4.2",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "concurrently": "^3.6.0"
  }
}
